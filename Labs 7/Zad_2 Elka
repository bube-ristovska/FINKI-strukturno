#include <stdio.h>
#define MAX 100
int n;
void star(int n, int m){
 for(int i = 0; i < n; i++){
       for(int j = 0; j < m-1; j++){
           printf(" ");
       }
       for(int k = 0; k <= 2*i; k++){
         printf("*");
       }
       m--;
    printf("\n");
  }
}

int main()
{
    int n,m;
    scanf("%d",&n);
    n=n/2+1;
    m=n;
    star(n, m);
   
    return 0;
}
